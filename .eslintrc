{
  "parser": "babel-eslint",
  "extends": "airbnb",
  "rules": {
    "react/jsx-filename-extension": 0,
    "import/no-unresolved": 0,
    "arrow-body-style": [0, "always"],
    "react/jsx-boolean-value": 0,
    "no-unused-vars": ["error", { "vars": "all", "args": "none" }],
  },
  "parserOptions": {
        "ecmaFeatures": {
            "jsx": true,
            "classes": true,
            experimentalObjectRestSpread: true
        }
    },
    "globals": {
        "__DEV__": false,
    },
}
